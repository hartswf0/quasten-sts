:root {
    --bg-color: #121212;
    --text-color: #e0e0e0;
    --accent-amber: #ffab00;
    --accent-blue: #64b5f6;
    --card-bg: #1e1e1e;
    --border-color: #333;
}

body {
    background-color: var(--bg-color);
    color: var(--text-color);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    line-height: 1.6;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
}

h1 {
    color: var(--accent-amber);
    border-bottom: 2px solid var(--accent-amber);
    padding-bottom: 0.5rem;
}

h2 {
    color: var(--accent-blue);
    margin-top: 2rem;
}

a {
    color: var(--accent-blue);
    text-decoration: none;
    transition: color 0.3s ease;
}

a:hover {
    color: var(--accent-amber);
    text-decoration: underline;
}

.author-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
}

.author-card {
    background-color: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 1rem;
    transition: transform 0.3s ease;
}

.author-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
}

.author-card.sts {
    border-left: 4px solid var(--accent-blue);
}

.author-card.ms {
    border-left: 4px solid var(--accent-amber);
}

.author-card.both {
    border-left: 4px solid #bb86fc;
}

.tag {
    display: inline-block;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
    margin-right: 0.5rem;
}

.tag.sts {
    background-color: var(--accent-blue);
    color: #000;
}

.tag.ms {
    background-color: var(--accent-amber);
    color: #000;
}

.tag.both {
    background-color: #bb86fc;
    color: #000;
}

footer {
    margin-top: 3rem;
    text-align: center;
    font-size: 0.9rem;
    color: #888;
    border-top: 1px solid var(--border-color);
    padding-top: 1rem;
}

.content {
    background-color: var(--card-bg);
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid var(--border-color);
}

.back-link {
    display: inline-block;
    margin-bottom: 1rem;
    padding: 0.5rem 1rem;
    background-color: var(--card-bg);
    border-radius: 4px;
    border: 1px solid var(--border-color);
}

/* Dark/light mode toggle */
.theme-toggle {
    position: fixed;
    top: 1rem;
    right: 1rem;
    background-color: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 1000;
}

/* Light theme */
body.light-theme {
    --bg-color: #f5f5f5;
    --text-color: #333;
    --card-bg: #fff;
    --border-color: #ddd;
}

/* Search functionality */
.search-container {
    margin-bottom: 2rem;
}

.search-input {
    width: 100%;
    padding: 0.8rem;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    background-color: var(--card-bg);
    color: var(--text-color);
    font-size: 1rem;
}

.search-input:focus {
    outline: none;
    border-color: var(--accent-blue);
}

.hidden {
    display: none;
}

/* Improved button styling */
.author-card {
    cursor: pointer;
}

.author-card a {
    display: block;
    text-decoration: none;
}

.author-card:hover a {
    text-decoration: none;
}

/* Make the entire card clickable */
.author-card a::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.author-card {
    position: relative;
}

.author-card * {
    position: relative;
    z-index: 2;
}

/* Improve back link styling */
.back-link {
    transition: all 0.3s ease;
}

.back-link:hover {
    background-color: var(--accent-blue);
    color: var(--bg-color);
    border-color: var(--accent-blue);
}

/* Improved content styling */
.content {
    line-height: 1.8;
}

.content p {
    margin-bottom: 1.2em;
}

.content h1, .content h2, .content h3 {
    margin-top: 1.5em;
    margin-bottom: 0.8em;
}

/* Citations styling */
.citations {
    margin-top: 2em;
    border-top: 1px solid var(--border-color);
    padding-top: 1em;
}

.citations p {
    margin-bottom: 0.5em;
}

.citation-link {
    color: var(--accent-blue);
    text-decoration: none;
    transition: color 0.2s ease;
}

.citation-link:hover {
    color: var(--accent-amber);
    text-decoration: underline;
}

/* Preserve whitespace */
.content pre {
    white-space: pre-wrap;
    font-family: inherit;
    margin: 1em 0;
    line-height: 1.6;
}

/* Block quotes */
blockquote {
    border-left: 3px solid var(--accent-amber);
    padding-left: 1em;
    margin-left: 0;
    font-style: italic;
    color: #aaa;
}
