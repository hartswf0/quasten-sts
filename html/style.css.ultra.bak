:root {
    --bg-color: #121212;
    --text-color: #e0e0e0;
    --accent-color: #d4af37;
    --link-color: #d4af37;
    --card-bg: #1e1e1e;
    --border-color: #333;
}

body {
    background-color: var(--bg-color);
    color: var(--text-color);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    line-height: 1.4;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem;
}

h1 {
    color: var(--accent-color);
    border-bottom: 1px solid var(--accent-color);
    padding-bottom: 0.3rem;
    font-size: 1.5em;
    margin: 0.7em 0;
}

h2 {
    color: var(--accent-color);
    font-size: 1.3em;
    margin: 0.6em 0;
}

h3 {
    color: var(--accent-color);
    font-size: 1.1em;
    margin: 0.5em 0;
}

a {
    color: var(--link-color);
    text-decoration: none;
    transition: opacity 0.2s ease;
}

a:hover {
    opacity: 0.8;
    text-decoration: underline;
}

.author-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 0.8rem;
    margin-top: 1.5rem;
}

.author-card {
    background-color: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 4px;
    padding: 0.7rem;
    transition: transform 0.2s ease;
    cursor: pointer;
}

.author-card:hover {
    transform: translateY(-3px);
}

.author-card.sts {
    border-left: 3px solid var(--accent-color);
}

.author-card.ms {
    border-left: 3px solid var(--accent-color);
}

.author-card.both {
    border-left: 3px solid var(--accent-color);
}

.tag {
    display: inline-block;
    padding: 0.1rem 0.3rem;
    border-radius: 3px;
    font-size: 0.7rem;
    margin-right: 0.3rem;
    font-weight: bold;
    background-color: var(--accent-color);
    color: #000;
}

footer {
    margin-top: 2rem;
    text-align: center;
    font-size: 0.8rem;
    color: #888;
    border-top: 1px solid var(--border-color);
    padding-top: 0.8rem;
}

.content {
    background-color: var(--card-bg);
    padding: 1rem;
    border-radius: 4px;
    border: 1px solid var(--border-color);
    font-size: 0.95em;
    line-height: 1.35;
}

.content p {
    margin: 0.4em 0;
}

.back-link {
    display: inline-block;
    margin-bottom: 0.8rem;
    padding: 0.3rem 0.7rem;
    background-color: var(--card-bg);
    border-radius: 4px;
    border: 1px solid var(--border-color);
}

/* Citations styling */
.citations {
    margin-top: 1.5em;
    border-top: 1px solid var(--border-color);
    padding-top: 0.8em;
    font-size: 0.85em;
}

.citations h3 {
    margin-top: 0;
    margin-bottom: 0.5em;
}

.citation {
    margin-bottom: 0.3em;
    overflow-wrap: break-word;
    word-break: break-all;
}

.citation a {
    color: var(--link-color);
}

.citation-number {
    display: inline-block;
    padding: 0 0.2em;
    margin: 0 0.1em;
    color: var(--accent-color);
    font-size: 0.9em;
    text-decoration: none;
}

/* Dark mode toggle */
.theme-toggle {
    position: fixed;
    top: 1rem;
    right: 1rem;
    background-color: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 50%;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 1000;
}

/* Mobile optimizations */
@media (max-width: 600px) {
    .container {
        padding: 0.5rem;
    }
    
    .content {
        padding: 0.7rem;
        font-size: 0.9em;
    }
    
    .author-grid {
        grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
        gap: 0.5rem;
    }
    
    .author-card {
        padding: 0.5em;
    }
    
    .author-card h3 {
        font-size: 0.9em;
        margin: 0 0 0.2em 0;
    }
    
    .tag {
        font-size: 0.65rem;
        padding: 0.05rem 0.2rem;
    }
}

/* Ultra-dense text styling for mobile */
.content.ultra-dense {
    max-width: 100%;
    font-size: 0.9em;
    line-height: 1.3;
    letter-spacing: -0.01em;
    word-spacing: -0.01em;
    font-family: 'Courier New', monospace;
    padding: 0.8em;
    border-radius: 4px;
    border: 1px solid var(--border-color);
    background-color: rgba(0, 0, 0, 0.2);
    overflow-x: auto;
}

.content.ultra-dense p {
    margin-bottom: 0.5em;
    text-indent: 0;
    padding-left: 0;
}

.content.ultra-dense h1, 
.content.ultra-dense h2, 
.content.ultra-dense h3 {
    margin-top: 0.8em;
    margin-bottom: 0.4em;
    line-height: 1.1;
}

.content.ultra-dense h1 {
    font-size: 1.2em;
    border-bottom: 1px solid var(--accent-amber);
    padding-bottom: 0.2em;
}

.content.ultra-dense h2 {
    font-size: 1.1em;
    border-bottom: 1px dotted var(--accent-blue);
    padding-bottom: 0.2em;
}

.content.ultra-dense h3 {
    font-size: 1em;
}

/* Citation hyperlinks */
.citation-number {
    display: inline-block;
    padding: 0 0.3em;
    margin: 0 0.1em;
    border-radius: 3px;
    background-color: rgba(100, 181, 246, 0.2);
    color: var(--accent-blue);
    font-size: 0.85em;
    text-decoration: none;
    transition: background-color 0.2s;
}

.citation-number:hover {
    background-color: rgba(100, 181, 246, 0.4);
    text-decoration: none;
}

/* Ultra-dense citations */
.citations.ultra-dense {
    font-size: 0.8em;
    line-height: 1.2;
    padding: 0.5em;
    margin-top: 1em;
    background-color: rgba(0, 0, 0, 0.1);
    border-radius: 4px;
}

.citations.ultra-dense h3 {
    font-size: 0.9em;
    margin-bottom: 0.4em;
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 0.2em;
}

.citation.ultra-dense {
    margin-bottom: 0.2em;
    padding-left: 1.5em;
    text-indent: -1.5em;
    font-size: 0.9em;
}

/* Mobile optimizations */
@media (max-width: 600px) {
    .container {
        padding: 0.8rem;
    }
    
    .content.ultra-dense {
        font-size: 0.85em;
        padding: 0.5em;
    }
    
    .author-grid {
        grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
        gap: 0.6rem;
    }
    
    .author-card {
        padding: 0.5em;
    }
    
    .author-card h3 {
        font-size: 0.9em;
        margin-bottom: 0.2em;
    }
    
    .tag {
        font-size: 0.7rem;
        padding: 0.1rem 0.3rem;
    }
}
